<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:id="@+id/ScoreLineXML">


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ScoreLine_IMG_imageLine"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:padding="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher_background" />


        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/ScoreLine_LBL_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_toEndOf="@+id/ScoreLine_IMG_imageLine"
            android:ellipsize="end"
            android:gravity="bottom"
            android:maxLines="1"
            android:minLines="1"
            android:text="Name"
            android:textSize="18sp" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/ScoreLine_LBL_score"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ScoreLine_LBL_name"
            android:layout_alignStart="@id/ScoreLine_LBL_name"
            android:gravity="top"
            android:layout_marginEnd="8dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:minLines="1"
            android:text="score"
            android:textSize="11sp" />



</RelativeLayout>