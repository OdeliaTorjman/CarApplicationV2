<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.MenueActivity">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/open_IMG_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/fond" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/open_IMG_man"
        android:layout_width="270dp"
        android:layout_height="200dp"
        app:srcCompat="@drawable/man"
        tools:layout_editor_absoluteX="80dp"
        android:layout_marginTop="200dp"
        android:layout_marginStart="60dp"
        tools:layout_editor_absoluteY="171dp" />



<androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="550dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:scaleType="fitCenter">


        <com.google.android.material.button.MaterialButton
            android:id="@+id/open_BTN_StartGame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="START GAME" />


    <com.google.android.material.button.MaterialButton
            android:id="@+id/open_BTN_TopTen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="TOP 10" />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <TextView
        android:id="@+id/open_TXT_Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BLOCKY HIGHWAY"
        android:textSize="50sp"
        android:textAlignment="center"
        android:textStyle="bold"/>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/margin_default"
        android:layout_marginTop="450dp"
        android:orientation="horizontal">

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/open_SWT_fast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FAST"
        android:textStyle="bold"
        android:padding="15dp"
        android:checked="false"/>

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/open_SWT_sensors"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SENSORS"
        android:textStyle="bold"
        android:checked="false"/>
    </androidx.appcompat.widget.LinearLayoutCompat>

</RelativeLayout>